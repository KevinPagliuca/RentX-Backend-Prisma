datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id             String   @id @default(uuid())
  name           String
  username       String
  email          String   @unique
  driver_license String
  password       String
  is_admin       Boolean  @default(false)
  created_at     DateTime @default(now())

  Rentals Rental[]
  @@map("users")
}

model Category {
  id          String   @id @default(uuid())
  name        String
  description String
  created_at  DateTime @default(now())

  cars Car[]
  @@map("categories")
}

model Car {
  id                String   @id @default(uuid())
  name              String
  description       String
  daily_rate        Decimal
  available         Boolean  @default(true)
  license_plate     String   @unique
  fine_amount       Decimal
  brand             String
  seats             Int
  max_velocity      Decimal?
  fuel_type         String
  transmission_type String
  horse_power       Int?
  category_id       String
  created_at        DateTime @default(now())

  category Category @relation(fields: [category_id], references: [id])
  Rentals  Rental[]
  @@map("cars")
}

model Rental {
  id String @id @default(uuid())

  start_date           DateTime
  end_date             DateTime?
  expected_return_date DateTime
  total                Decimal?
  isPaid               Boolean?  @default(false)
  created_at           DateTime  @default(now())

  user    User   @relation(fields: [user_id], references: [id])
  car     Car    @relation(fields: [car_id], references: [id])
  user_id String
  car_id  String

  @@map("rentals")
}
